{
  "name": "npm-deps",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "release": "changeset publish",
    "version": "changeset version && yarn update-lock",
    "update-lock": "yarn && git add yarn.lock",
    "dev:check-ci": "wsrun -m build && wsrun -m recipe:build && wsrun -m package:test",
    "postinstall": "yarn workspace @ekx/cli-utils build && wsrun -m postinstall"
  },
  "dependencies": {
    "@changesets/cli": "^2.14.1"
  },
  "devDependencies": {
    "@ekx/cli-utils": "0.0.1",
    "wsrun": "^5.2.4"
  },
  "workspaces": {
    "packages": ["packages/*"]
  }
}
