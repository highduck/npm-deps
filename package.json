{
  "name": "npm-deps",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "release": "changeset publish",
    "version": "changeset version && npm run update-lock",
    "update-lock": "npm install && git add package-lock.json",
    "dev:check-ci": "wsrun -m build && wsrun -m recipe:build && wsrun -m package:test",
    "postinstall": "wsrun -m postinstall",
    "ci:build": "wsrun -m -e -t build",
    "ci:build-recipes": "wsrun -m -e -t recipe:build",
    "ci:test-packages": "wsrun -m -e -t package:test"
  },
  "dependencies": {
    "@changesets/cli": "^2.14.1",
    "wsrun": "^5.2.4"
  },
  "devDependencies": {
    "@ekx/cli-utils": "*"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  }
}
