{
  "name": "@ekx/third-party",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "release": "changeset publish",
    "version": "changeset version && yarn run update-lock",
    "update-lock": "yarn && git add yarn.lock",
    "dev:check-ci": "wsrun -m build && wsrun -m recipe:build && wsrun -m package:test",
    "postinstall": "wsrun -m postinstall",
    "ci:build": "wsrun -m -e -t build",
    "ci:test": "wsrun -m -e -t test",
    "ci:build-recipes": "wsrun -m -e -t recipe:build",
    "ci:test-packages": "wsrun -m -e -t package:test",
    "repo:clean": "git clean -fdx",
    "check-install": "git clean -fdx && yarn --frozen-lockfile"
  },
  "dependencies": {
    "@changesets/cli": "^2.14.1",
    "wsrun": "^5.2.4"
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "helpers/*"
    ]
  }
}
